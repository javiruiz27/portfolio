---
import Button from "../components/button.astro";
import Experiences from "../components/experiences/experiences.astro";
import Separator from "../components/home/separator.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Javier">
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1
          class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white"
        >
          Hello, I'm Javier.
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          I'm a front-end engineer living in Seville. <br
            class="hidden lg:block"
          />I focus on Web development.
        </p>
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400"
        >
          <li>React.js Development</li>
          <li>Node.js Development</li>
          <li>and more...</li>
        </ul>
        <Button text="Follow me on GitHub" link="https://github.com/javiruiz27" />
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      > 
      <div class="relative z-30 px-10 py-10 bg-white rounded-2xl shadow-lg dark:bg-neutral-800">
        <img
          src="/assets/images/photo.jpeg"
          loading="eager"
          decoding="auto"
          class="relative z-30 w-full aspect-square md:max-w-md mx-auto dark:-translate-y-0.5 rounded-xl overflow-hidden object-cover object-top"
          alt="Javier's photo"
        />
      </div>
  
      </div>
    </div>
  </div>

  <Separator text="Check out my experience" />
  <Experiences />

</Layout>
